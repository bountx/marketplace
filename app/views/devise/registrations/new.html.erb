
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'login-form' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h2 class="login-heading">Sign up</h2>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email address", class: "input-field" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "password", class: "input-field" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "confirm password", class: "input-field" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "login-button" %>
  </div>
  <div class="sign-up">
  <%= render "devise/shared/links" %>
  </div>
<% end %>



