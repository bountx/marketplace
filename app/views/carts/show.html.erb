<h1>Your Cart</h1>
<% @cart_items.each do |item| %>
  <p>
    <%= item.product.name %> - <%= item.quantity %> - <%= number_to_currency(item.product.price * item.quantity) %>
    <%= link_to 'Remove', cart_item_path(item), method: :delete %>
  </p>
<% end %>
<p>Total: <%= number_to_currency(@cart_items.sum { |item| item.product.price * item.quantity }) %></p>
